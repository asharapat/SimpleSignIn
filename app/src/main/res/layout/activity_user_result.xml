<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/congrats_jon_jones"
    tools:context="com.example.seydazimovnurbol.registerfirebase.UserResultActivity">

    <TextView
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/userResultTextView"
        tools:text = "20.5 seconds"
        android:textColor="#FFFFFF"
        android:textSize="30sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Share"
        android:background="@drawable/button"
        android:id="@+id/shareButton"
        android:textColor="#FFE3E3"
        android:textSize="20sp"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="start again"
        android:background="@drawable/button"
        android:textColor="#FFE3E3"
        android:textSize="20sp"
        android:id="@+id/startButton"
        android:gravity="center"/>

</LinearLayout>
